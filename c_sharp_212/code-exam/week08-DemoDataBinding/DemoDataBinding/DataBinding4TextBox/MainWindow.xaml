<Window x:Class="DataBinding4TextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding4TextBox"
        mc:Ignorable="d"
        Title="Demo Data Binding"
        Height="300"
        Width="800">
    <Grid>
        
        <StackPanel TextElement.FontSize="16">
            <Label Content="Message"
                   Margin="20 5 50 20" />
            <TextBox Height="40"
          Text ="tiankong"
          TextWrapping="Wrap"
          Margin="20" />
            <TextBox Height="40"
                     x:Name="txtBoxMessage"
                     TextWrapping="Wrap"
                     Margin="20" />

            <Label Content="Value"
                   Margin="20 5 50 20" />
            <TextBox Height="40"
                     TextWrapping="Wrap"
                     x:Name="txtBoxValue"
                     
                     Text="{Binding Path=Text, ElementName=txtBoxMessage, UpdateSourceTrigger=PropertyChanged}"
                     
                     Margin="20" />
        </StackPanel>
    </Grid>
</Window>
